{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "import",
    "@typescript-eslint",
    "mocha"
  ],
  "rules": {
    // Your custom rules here
    "no-console": "warn", // Example rule
    "mocha/no-exclusive-tests": "error" // Example Mocha rule
  }
}
